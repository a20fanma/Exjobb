# A guide how to store images into a database
# Using MySQL and MongoDB

---------------------------
# uploadImage.php

<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>
            Upload images
        </title>
    </head>
    <body>
        <form method="post" action="upload.php" enctype="multipart/form-data">
            <input type="file" name="image" /> // Makes an input button to "choose a file"
            <input type="submit" name="submit" value="upload" /> // Upload the chosen file
        </form>
    </body>
</html>

---------------------------
# upload.php

<?php
    $pdo = new PDO('mysql:dbname=test_image_db;host=localhost','root','');

    if(isset($_POST['submit'])){
        $imageName = $_FILES['image']['name'];
        $imageSize = $_FILES['image']['size'];
        $tmp_name = $_FILES['image']['tmp_name'];
        $imageFolder = "imageMySQL/"; // Save the image in a folder
        $imagePath = $imageFolder . $imageName; 

        if(move_uploaded_file($tmp_name, $imagePath)){
            $querystring = 'INSERT INTO image(imageName, imageData ) VALUES (:imageName, :imageData);';
            $stmt = $pdo->prepare($querystring);
            $stmt->bindParam(':imageName', $imageName);
            $stmt->bindParam(':imageData', $imagePath);

            if($stmt->execute()){
                // Show this when the image is successfully inserted into the database
                echo "Image has insert!";  
            }
    
            }else{
                // Show this when the image failed to insert into the database
                echo "Errors!"; 
            }

    }else{
        header("Location: UploadImage.php");
    }
    
?>

------------------------------------
# Store image in MongoDB

<?php

    if(isset($_POST['submit'])){

        $collection = (new MongoDB\Client) -> database -> imageDocument;

        $document = [
            'imageName' => $_FILES['image']['name'],
            'imageSize' => $_FILES['image']['size'],
            'tmp_name' => $_FILES['image']['tmp_name'],
        ];        

        if($_FILES['image']){ // Check if image has a value

            // Will move the image to a folder
            if(move_uploaded_file($_FILES['image']['tmp_name'], 'imageMongoDB/'. $_FILES['image']['name'])){
                $document['imageInfo'] = $_FILES['image']['name']; // Adds to MongoDB document
            }
        }

        // Insert an image to the MongoDB document
        $result = $collection->insertOne($document);
        echo "<br>";
        if($result->getInsertedCount()>0){
            // Show this when the image is successfully inserted in the database
            echo "Image has inserted!"; 
        }else{
            echo "Errors"; // Show this when the image failed to insert
        }

    }

    // Display the image
    header('Content-Type: image/png'); 
    imagepng(imagecreatefromstring($document->imageInfo->getData()));
    

?>
